{
  "private": true,
  "scripts": {
    "install-all": "npm-recursive-install",
    "lint:css": "stylelint \"**/*.{css,scss}\" --fix",
    "format": "prettier --write",
    "serve:personal-website": "cd projects/personal-website && npm run serve",
    "e2e:personal-website": "cd projects/personal-website && npm run e2e",
    "monitor-projects": "cd scripts/node && npm run monitor-projects"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamharryliu/vigilant-broccoli.git"
  },
  "bugs": {
    "url": "https://github.com/iamharryliu/vigilant-broccoli/issues"
  },
  "homepage": "https://github.com/iamharryliu/vigilant-broccoli#readme",
  "devDependencies": {
    "husky": "^4.3.8",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "npm run lint:css",
      "npm run format"
    ],
    "*.{json,md}": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit.legacy": "lint-staged"
    }
  }
}
