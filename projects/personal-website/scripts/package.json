{
  "name": "personal-website-scripts",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "format:commit": "prettier --write",
    "lint:commit": "eslint --fix",
    "e2e": "cypress run",
    "e2e:open": "cypress open"
  },
  "dependencies": {
    "@prettydamntired/node-tools": "^1.0.18",
    "@prettydamntired/test-lib": "^0.0.7"
  },
  "devDependencies": {
    "cypress": "^13.6.2",
    "mongodb": "^6.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:commit",
      "npm run lint:commit"
    ],
    "*.{json,md}": [
      "npm run format:commit"
    ]
  }
}
