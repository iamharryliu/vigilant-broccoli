{
  "name": "personal-website-scripts",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "format:commit": "prettier --write",
    "lint:commit": "eslint --fix"
  },
  "devDependencies": {
    "@prettydamntired/test-lib": "^0.0.27",
    "@prettydamntired/test-node-tools": "^0.0.23",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "eslint": "^8.56.0",
    "mongodb": "^6.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:commit",
      "npm run lint:commit"
    ],
    "*.{json,md}": [
      "npm run format:commit"
    ]
  }
}
