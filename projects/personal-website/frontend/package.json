{
  "name": "personal-website-frontend",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start:mock": "concurrently --kill-others \"ng serve\"  \"nodemon mock-server/server.js --ext js,ts,json,html\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "lint": "eslint --fix .",
    "lint:css": "stylelint -f verbose '**/*.scss' --fix",
    "format": "prettier --write .",
    "test": "jest --coverage .",
    "checks": "npm run lint && npm run lint:css && npm run format && npm run test",
    "test:watch": "jest --coverage --watch .",
    "lint:commit": "eslint --fix",
    "lint:css:commit": "stylelint '**/*.scss' --fix",
    "format:commit": "prettier --write",
    "test:commit": "jest --bail --findRelatedTests"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.8",
    "@angular/common": "^17.0.8",
    "@angular/compiler": "^17.0.8",
    "@angular/core": "^17.0.8",
    "@angular/forms": "^17.0.8",
    "@angular/platform-browser": "^17.0.8",
    "@angular/platform-browser-dynamic": "^17.0.8",
    "@angular/router": "^17.0.8",
    "@prettydamntired/personal-website-lib": "^0.0.4",
    "@prettydamntired/test-lib": "^0.0.32",
    "ng-recaptcha": "^13.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.9",
    "@angular-eslint/builder": "17.1.1",
    "@angular-eslint/eslint-plugin": "17.1.1",
    "@angular-eslint/eslint-plugin-template": "17.1.1",
    "@angular-eslint/schematics": "17.1.1",
    "@angular-eslint/template-parser": "17.1.1",
    "@angular/cli": "~17.0.9",
    "@angular/compiler-cli": "^17.0.8",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^13.1.2",
    "json-server": "^0.17.4",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.25",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.2.2"
  },
  "jest": {
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1",
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@components/(.*)": "<rootDir>/src/app/components/$1",
      "@layouts/(.*)": "<rootDir>/src/app/components/layouts/$1",
      "@pages/(.*)": "<rootDir>/src/app/components/pages/$1",
      "@features/(.*)": "<rootDir>/src/app/components/features/$1",
      "@services/(.*)": "<rootDir>/src/app/core/services/$1",
      "@interceptors/(.*)": "<rootDir>/src/app/core/interceptors/$1",
      "@utils/(.*)": "<rootDir>/src/app/core/utils/$1",
      "@consts/(.*)": "<rootDir>/src/app/core/consts/$1"
    },
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:commit",
      "npm run format:commit",
      "npm run test:commit"
    ],
    "*.scss": [
      "npm run lint:css:commit",
      "npm run format:commit"
    ],
    "*.{json,md}": [
      "npm run format:commit"
    ]
  }
}
