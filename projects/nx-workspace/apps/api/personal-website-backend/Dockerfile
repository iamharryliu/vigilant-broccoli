# Build the docker image with `npx nx docker-build personal-website-backend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t personal-website-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system personal-website-backend && \
          adduser --system -G personal-website-backend personal-website-backend

COPY dist/apps/api/personal-website-backend personal-website-backend
RUN chown -R personal-website-backend:personal-website-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix personal-website-backend --omit=dev -f install

CMD [ "node", "personal-website-backend" ]
