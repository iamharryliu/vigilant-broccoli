#
# Build the docker image with `npx nx docker-build express-demo`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t express-demo`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system express-demo && \
          adduser --system -G express-demo express-demo

COPY dist/apps/api/express-demo express-demo/
RUN chown -R express-demo:express-demo .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix express-demo --omit=dev -f install

CMD [ "node", "express-demo" ]
