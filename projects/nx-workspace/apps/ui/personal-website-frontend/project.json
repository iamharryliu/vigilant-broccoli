{
  "name": "personal-website-frontend",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/ui/personal-website-frontend/src",
  "tags": [],
  "targets": {
    "serve:mock": {
      "command": "concurrently --kill-others \"nx serve personal-website-frontend\"  \"ts-node apps/ui/personal-website-frontend/mock-server/server.ts --ext js,ts,json,html\""
    },
    "pre-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "ts-node file_structure_to_json.ts ../../notes ./apps/ui/personal-website-frontend/src/assets/md-library/md-library.json && rsync -r ../../notes apps/ui/personal-website-frontend/src/assets/md-library/ --delete"
          }
        ]
      }
    },
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ui/personal-website-frontend",
        "index": "apps/ui/personal-website-frontend/src/index.html",
        "browser": "apps/ui/personal-website-frontend/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/ui/personal-website-frontend/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/ui/personal-website-frontend/src/favicon.ico",
          "apps/ui/personal-website-frontend/src/assets"
        ],
        "styles": [
          "apps/ui/personal-website-frontend/src/styles.scss",
          "node_modules/@fortawesome/fontawesome-free/css/all.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/ui/personal-website-frontend/src/environments/environment.ts",
              "with": "apps/ui/personal-website-frontend/src/environments/environment.development.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production",
      "dependsOn": ["pre-build"]
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "personal-website-frontend:build:production"
        },
        "development": {
          "buildTarget": "personal-website-frontend:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "personal-website-frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/ui/personal-website-frontend/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "personal-website-frontend:build",
        "staticFilePath": "dist/apps/ui/personal-website-frontend/browser"
      }
    },
    "deploy": {
      "command": "npx wrangler pages deploy dist/apps/ui/personal-website-frontend/browser --project-name harryliu-design-angular",
      "dependsOn": ["build"]
    }
  }
}
