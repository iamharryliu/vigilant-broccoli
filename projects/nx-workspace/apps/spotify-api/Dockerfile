#
# Build the docker image with `npx nx docker-build spotify-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t spotify-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=8080

WORKDIR /app

RUN addgroup --system spotify-api && \
    adduser --system -G spotify-api spotify-api

COPY dist/apps/spotify-api spotify-api
RUN chown -R spotify-api:spotify-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix spotify-api --omit=dev -f install

CMD [ "node", "spotify-api" ]
