// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique @db.VarChar(30)
  email       String?  @unique @db.VarChar(128)
  isVerified  Boolean  @default(false) @map("is_verified")
  password    String?  @db.VarChar(128)
  userType    String   @default("USER") @map("user_type") @db.VarChar(20)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  groups      GroupUser[]

  @@map("users")
}

model Application {
  id          String   @id @default(uuid())
  name        String   @unique @db.VarChar(100)
  description String?  @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  groups      GroupApplication[]

  @@map("applications")
}

model Group {
  id          String   @id @default(uuid())
  name        String   @unique @db.VarChar(100)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  users        GroupUser[]
  applications GroupApplication[]

  @@map("groups")
}

// Junction table for User <-> Group (many-to-many)
model GroupUser {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  groupId   String   @map("group_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@map("group_users")
}

// Junction table for Group <-> Application (many-to-many)
model GroupApplication {
  id            String   @id @default(uuid())
  groupId       String   @map("group_id")
  applicationId String   @map("application_id")
  createdAt     DateTime @default(now()) @map("created_at")

  group       Group       @relation(fields: [groupId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@unique([groupId, applicationId])
  @@map("group_applications")
}
